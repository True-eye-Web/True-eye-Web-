    <script>
        function switchTab(tabName) {
            // ëª¨ë“  íƒ­ê³¼ ì½˜í…ì¸  ë¹„í™œì„±í™”
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.input-content').forEach(content => content.classList.remove('active'));
            
            // ì„ íƒëœ íƒ­ê³¼ ì½˜í…ì¸  í™œì„±í™”
            event.target.classList.add('active');
            document.getElementById(tabName + '-content').classList.add('active');
        }

        function analyzeContent() {
            // ë¡œë”© í™”ë©´ í‘œì‹œ
            document.getElementById('loading').style.display = 'block';
            document.getElementById('results').classList.remove('show');
            
            // 3ì´ˆ í›„ ê²°ê³¼ í‘œì‹œ (ì‹¤ì œë¡œëŠ” AI ë¶„ì„ ì‹œê°„)
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
                document.getElementById('results').classList.add('show');
                
                // ìŠ¤ì½”ì–´ ë°” ì• ë‹ˆë©”ì´ì…˜
                animateScoreBars();
            }, 3000);
        }

        function animateScoreBars() {
            const scoreFills = document.querySelectorAll('.score-fill');
            scoreFills.forEach((fill, index) => {
                setTimeout(() => {
                    fill.style.width = fill.style.width;
                }, index * 200);
            });
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ìƒ˜í”Œ ê²°ê³¼ í‘œì‹œ
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('results').classList.add('show');
                animateScoreBars();
            }, 1000);
        });
    </script>
